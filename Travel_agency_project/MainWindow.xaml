<Window x:Class="Travel_agency_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Travel_agency_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Felhasználó:" VerticalAlignment="Center"/>
        <TextBox x:Name="UsernameBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Jelszó:" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Button Content="Regisztráció" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,0"
                Click="Button_Click"/>
        <Button Content="Bejelentkezés" Name="LoginB" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10,0,0"
                Click="LoginB_Click"/>

        <TextBlock x:Name="StatusText" Grid.Row="4" Grid.ColumnSpan="2" Margin="0,10,0,0"
                   Foreground="DarkRed" TextAlignment="Center"/>
        
        
    </Grid>
</Window>
